{
  "name": "@shield/wallet-service",
  "version": "1.0.0",
  "description": "Wallet management service for Shield platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec \"npx tsx src/index.ts\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=lcov",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "keywords": [
    "shield",
    "wallet",
    "crypto",
    "microservices"
  ],
  "author": "Shield Security, Inc.",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.1.0",
    "@types/supertest": "^6.0.2",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "prisma": "^6.12.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.0",
    "tsx": "^4.19.2"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
