{
  "info": {
    "name": "Shield Platform API",
    "description": "Complete API collection for Shield microservices platform - USDT payment infrastructure layer",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "shield-platform"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    },
    {
      "key": "walletId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', response.data.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', response.data.refreshToken);",
                  "    pm.collectionVariables.set('userId', response.data.user.id);",
                  "    pm.test('User registered successfully', () => {",
                  "        pm.expect(response.success).to.be.true;",
                  "        pm.expect(response.data).to.have.property('accessToken');",
                  "        pm.expect(response.data).to.have.property('refreshToken');",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"demo@shield.xyz\",\n  \"password\": \"SecureP@ss123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Register a new user with email and password"
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', response.data.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', response.data.refreshToken);",
                  "    pm.collectionVariables.set('userId', response.data.user.id);",
                  "    pm.test('Login successful', () => {",
                  "        pm.expect(response.success).to.be.true;",
                  "        pm.expect(response.data).to.have.property('accessToken');",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"demo@shield.xyz\",\n  \"password\": \"SecureP@ss123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Login with existing credentials"
          },
          "response": []
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', response.data.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', response.data.refreshToken);",
                  "    pm.test('Token refreshed successfully', () => {",
                  "        pm.expect(response.success).to.be.true;",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "refresh"]
            },
            "description": "Refresh access token using refresh token"
          },
          "response": []
        },
        {
          "name": "Logout",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "logout"]
            },
            "description": "Logout and revoke refresh token"
          },
          "response": []
        }
      ],
      "description": "User authentication endpoints"
    },
    {
      "name": "Wallets",
      "item": [
        {
          "name": "Create Polygon Wallet",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('walletId', response.data.id);",
                  "    pm.test('Wallet created successfully', () => {",
                  "        pm.expect(response.success).to.be.true;",
                  "        pm.expect(response.data.chain).to.equal('POLYGON');",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"chain\": \"POLYGON\",\n  \"address\": \"0x742d35Cc6634C0532925a3b844Bc9e7595f0bEb0\",\n  \"tag\": \"Main Polygon Wallet\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/wallets",
              "host": ["{{baseUrl}}"],
              "path": ["api", "wallets"]
            },
            "description": "Create a new Polygon wallet"
          },
          "response": []
        },
        {
          "name": "Create Tron Wallet",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"chain\": \"TRON\",\n  \"address\": \"TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t\",\n  \"tag\": \"Main Tron Wallet\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/wallets",
              "host": ["{{baseUrl}}"],
              "path": ["api", "wallets"]
            },
            "description": "Create a new Tron wallet"
          },
          "response": []
        },
        {
          "name": "List All Wallets",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/wallets",
              "host": ["{{baseUrl}}"],
              "path": ["api", "wallets"]
            },
            "description": "Get all wallets for authenticated user"
          },
          "response": []
        },
        {
          "name": "List Polygon Wallets",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/wallets?chain=POLYGON",
              "host": ["{{baseUrl}}"],
              "path": ["api", "wallets"],
              "query": [
                {
                  "key": "chain",
                  "value": "POLYGON"
                }
              ]
            },
            "description": "Get only Polygon wallets"
          },
          "response": []
        },
        {
          "name": "List Active Wallets",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/wallets?isActive=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "wallets"],
              "query": [
                {
                  "key": "isActive",
                  "value": "true"
                }
              ]
            },
            "description": "Get only active wallets"
          },
          "response": []
        },
        {
          "name": "Get Wallet by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/wallets/{{walletId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "wallets", "{{walletId}}"]
            },
            "description": "Get specific wallet details"
          },
          "response": []
        },
        {
          "name": "Update Wallet",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tag\": \"Updated Wallet Name\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/wallets/{{walletId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "wallets", "{{walletId}}"]
            },
            "description": "Update wallet information"
          },
          "response": []
        },
        {
          "name": "Deactivate Wallet",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"isActive\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/wallets/{{walletId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "wallets", "{{walletId}}"]
            },
            "description": "Deactivate a wallet"
          },
          "response": []
        },
        {
          "name": "Delete Wallet",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/wallets/{{walletId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "wallets", "{{walletId}}"]
            },
            "description": "Delete a wallet permanently"
          },
          "response": []
        },
        {
          "name": "Get Wallet Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/wallets/stats",
              "host": ["{{baseUrl}}"],
              "path": ["api", "wallets", "stats"]
            },
            "description": "Get wallet statistics for user"
          },
          "response": []
        }
      ],
      "description": "Wallet management endpoints (Polygon & Tron)"
    },
