{
  "info": {
    "_postman_id": "shield-complete-test-suite-v2",
    "name": "Shield Platform - Enterprise Test Suite (80%+ Coverage)",
    "description": "Complete test suite with all edge cases, error scenarios, boundary conditions, and happy paths for Shield Platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "walletId",
      "value": "",
      "type": "string"
    },
    {
      "key": "polygonWalletId",
      "value": "",
      "type": "string"
    },
    {
      "key": "tronWalletId",
      "value": "",
      "type": "string"
    },
    {
      "key": "transactionId",
      "value": "",
      "type": "string"
    },
    {
      "key": "complianceCheckId",
      "value": "",
      "type": "string"
    },
    {
      "key": "testEmail",
      "value": "test1763002000@shield.test",
      "type": "string"
    },
    {
      "key": "testPassword",
      "value": "SecurePass123!",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "01 - System Health & Status",
      "item": [
        {
          "name": "API Gateway Health",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', () => pm.response.to.have.status(200));",
                  "pm.test('Response time < 500ms', () => pm.expect(pm.response.responseTime).to.be.below(500));",
                  "pm.test('Health status is ok', () => {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data.status).to.eql('ok');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "health"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "02 - Authentication - Success Scenarios",
      "item": [
        {
          "name": "Register New User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 201 Created', () => pm.response.to.have.status(201));",
                  "pm.test('Returns success response', () => {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data.success).to.be.true;",
                  "});",
                  "pm.test('Contains accessToken and refreshToken', () => {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data.data).to.have.property('accessToken');",
                  "    pm.expect(data.data).to.have.property('refreshToken');",
                  "    pm.expect(data.data.accessToken).to.be.a('string').and.not.empty;",
                  "    pm.expect(data.data.refreshToken).to.be.a('string').and.not.empty;",
                  "});",
                  "pm.test('Save tokens to variables', () => {",
                  "    const data = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', data.data.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', data.data.refreshToken);",
                  "});",
                  "pm.test('Response has timestamp', () => {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data).to.have.property('timestamp');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{testEmail}}\",\n  \"password\": \"{{testPassword}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "register"
              ]
            }
          }
        },
        {
          "name": "Login with Valid Credentials",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200 OK', () => pm.response.to.have.status(200));",
                  "pm.test('Login successful', () => {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data.success).to.be.true;",
                  "    pm.expect(data.data.accessToken).to.exist;",
                  "    pm.expect(data.data.refreshToken).to.exist;",
                  "});",
                  "pm.test('Update tokens', () => {",
                  "    const data = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', data.data.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', data.data.refreshToken);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{testEmail}}\",\n  \"password\": \"{{testPassword}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "03 - Authentication - Error & Edge Cases",
      "item": [
        {
          "name": "Register - Duplicate Email (409 Conflict)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 409 Conflict', () => pm.response.to.have.status(409));",
                  "pm.test('Error indicates duplicate', () => {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data.success).to.be.false;",
                  "    pm.expect(data.message.toLowerCase()).to.include('already');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{testEmail}}\",\n  \"password\": \"{{testPassword}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "register"
              ]
            }
          }
        },
        {
          "name": "Register - Invalid Email Format (400)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 400 Bad Request', () => pm.response.to.have.status(400));",
                  "pm.test('Validation error', () => {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data.success).to.be.false;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"not-an-email\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "register"
              ]
            }
          }
        },
        {
          "name": "Login - Wrong Password (401)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 401 Unauthorized', () => pm.response.to.have.status(401));",
                  "pm.test('Invalid credentials error', () => {",
                  "    const data = pm.response.json();",
                  "    pm.expect(data.success).to.be.false;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{testEmail}}\",\n  \"password\": \"WrongPassword123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          }
        }
      ]
    }
  ]
}